%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img(src="#{@video.large_cover_url}")
      .video_info.col-sm-3
        %header
          %h3 
            = @video.title
          - if @video.reviews.any?  
            %span Rating: #{@video.average_rating}/5.0
          - else
            %span Rating: N/A  
        %p 
          = @video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          = link_to '+ My Queue', my_queue_path, class: 'btn btn-default'

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for [@video, @review ] do |f|
        %fieldset
          .form-group
            .row
              .col-sm-3
                =f.select :rating, options_for_select([5,4,3,2,1].map {|number| [pluralize(number, "Star")]}), label: 'Rate this video'
          .form-group
            .row
              .col-sm-8
                = f.text_area :body, label: 'Write Review', rows: 6
        %fieldset.form-group.actions.clearfix
          = f.submit 'Submit', class: 'btn btn-success'
          = link_to 'Cancel', video_path(@video)
      %header
        %h3 User Reviews (#{@reviews.count})
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span Rating: #{review.rating} / 5
                %p by <a href="">#{review.creator.full_name}</a>
              .col-sm-8
                %p #{review.body}
