%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag sessions_new_path, class: 'sign_in' do 
        %header
          %h1 Sign in
        %fieldset  
          = label_tag :email, "Email"
          = email_field_tag :email, params[:email] || ''
          = label_tag :password
          = password_field_tag :password, params[:password] || ''
        %fieldset.action
          = submit_tag 'Sign In', class: 'btn'
        

